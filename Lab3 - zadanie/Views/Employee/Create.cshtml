@model Lab3zadanie.Models.Employee
@{
    // Your existing Razor page directives and setup
}
<h1>Add an Employee</h1>
<form asp-controller="Employee" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="FirstName">FirstName</label>
        <input class="form-control" asp-for="FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LastName">LastName</label>
        <input class="form-control" asp-for="LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PESEL">Pesel</label>
        <input class="form-control" asp-for="PESEL" />
        <span class="text-danger" asp-validation-for="PESEL"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Position">Position</label>
        <input class="form-control" asp-for="Position" />
        <span class="text-danger" asp-validation-for="Position"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Department">Department</label>
        <select asp-for="Department" class="form-control">
            <option value="IT">IT</option>
            <option value="HR">HR</option>
            <option value="Finance">Finance</option>
            <option value="Marketing">Marketing</option>
        </select>
        <span class="text-danger" asp-validation-for="Department"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Create</button>
    </div>
</form>
<a class="btn btn-secondary" asp-action="Index">Back</a>