@model Lab3zadanie.Models.Employee

<h1>Edit an Employee</h1>
<form asp-controller="Employee" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="FirstName">FirstName</label>
        <input class="form-control" asp-for="FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LastName">LastName</label>
        <input class="form-control" asp-for="LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PESEL">Pesel</label>
        <input class="form-control" asp-for="PESEL" />
        <span class="text-danger" asp-validation-for="PESEL"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Position">Position</label>
        <input class="form-control" asp-for="Position" />
        <span class="text-danger" asp-validation-for="Position"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Department">Department</label>
        <input class="form-control" asp-for="Department" />
        <span class="text-danger" asp-validation-for="Department"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Save</button>
        <button class="btn btn-danger" type="reset">Clear</button>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</form>
