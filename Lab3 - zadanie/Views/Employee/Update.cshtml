@model Lab3zadanie.Models.Employee

<h1>Update an Employee</h1>
<form asp-controller="Employee" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName" />
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName" />
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PESEL">PESEL</label>
        <input class="form-control" asp-for="PESEL" />
        <span class="text-danger" asp-validation-for="PESEL"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Position">Position</label>
        <input class="form-control" asp-for="Position" />
        <span class="text-danger" asp-validation-for="Position"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Department">Department</label>
        <select class="form-control" asp-for="Department">
            @{
                var enumValues = Enum.GetValues(typeof(Lab3zadanie.Models.Department));
                foreach (var value in enumValues)
                {
                    <option value="@value">@value</option>
                }
            }
        </select>
        <span class="text-danger" asp-validation-for="Department"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EmploymentDate">Employment Date</label>
        <input class="form-control" asp-for="EmploymentDate" />
        <span class="text-danger" asp-validation-for="EmploymentDate"></span>
    </div>
    <div class="mb-3">
        <label>
            <input type="checkbox" id="terminationCheckbox" onclick="toggleTerminationDate()" />
            Termination Date
        </label>
        <input class="form-control" id="terminationDateInput" asp-for="TerminationDate" disabled />
        <span class="text-danger" asp-validation-for="TerminationDate"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</form>

<script>
    function toggleTerminationDate() {
        var terminationDateInput = document.getElementById("terminationDateInput");
        if (terminationCheckbox.checked) {
            terminationDateInput.removeAttribute("disabled");
        } else {
            terminationDateInput.setAttribute("disabled", "disabled");
        }
    }
</script>
