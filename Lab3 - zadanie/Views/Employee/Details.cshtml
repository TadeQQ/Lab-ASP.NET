@model Lab3zadanie.Models.Employee

<h1>Employee "@Model.FirstName" "@Model.LastName" Details</h1>

<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Pesel</th>
        <th>Position</th>
        <th>Department</th>
        <th>Employment Date</th>
        <th>Termination Date</th>
    </tr>
    <tr>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.PESEL</td>
        <td>@Model.Position</td>
        <td>@Model.Department</td>
        <td>@Model.EmploymentDate</td>
         @{
            if (Model.TerminationDate != null)
            {
                <td>@Model.TerminationDate</td>
            }
            else {<td>Still working</td>}
            }
       
    </tr>
</table>

<a class="btn btn-primary" asp-action="Index">Back</a>
